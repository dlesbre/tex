%%
%% Custom color package for beamer metropolis
%% Use with \usecolortheme[color]{eyedark}
%% Provides the following colors:
%%   - dark mode: blue, red, green and black
%%   - light mode: yellow and cyan
%%
%% Author: Dorian Lesbre
%%
\NeedsTeXFormat{LaTeX2e}[2005/12/01]
\ProvidesPackage{beamercolorthemeye} [2021/09/10 v1.1.0 a custom theme for beamer metropolis presentations]

% Dependencies
\RequirePackage{etoolbox}
\RequirePackage{xcolor}

% Parameters
\newtoggle{blue}
\newtoggle{red}
\newtoggle{green}
\newtoggle{black}
\newtoggle{yellow}
\newtoggle{cyan}

\@ifclassloaded{beamer}{
	\DeclareOptionBeamer{blue}{\toggletrue{blue}}
	\DeclareOptionBeamer{red}{\toggletrue{red}}
	\DeclareOptionBeamer{green}{\toggletrue{green}}
	\DeclareOptionBeamer{black}{\toggletrue{black}}
	\DeclareOptionBeamer{yellow}{\toggletrue{yellow}}
	\DeclareOptionBeamer{cyan}{\toggletrue{cyan}}

	\ProcessOptionsBeamer
}{}

% === Color-definitions ===

% blue
\definecolor{eyeblue_bg}{HTML}{26263c}
\definecolor{eyeblue_title_bg}{HTML}{4c4c7c}
\colorlet{eyeblue_blocktitle_bg}{eyeblue_title_bg}
\colorlet{eyeblue_blockbody_bg}{eyeblue_title_bg!120}
\definecolor{eyeblue_highlight}{HTML}{EB811B}

% red
\definecolor{eyered_bg}{HTML}{3c2626}
\definecolor{eyered_title_bg}{HTML}{7c4c4c}
\colorlet{eyered_blocktitle_bg}{eyered_title_bg}
\colorlet{eyered_blockbody_bg}{eyered_title_bg!120}
\colorlet{eyered_highlight}{eyeblue_title_bg!60}

% green
\definecolor{eyegreen_bg}{HTML}{263c26}
\definecolor{eyegreen_title_bg}{HTML}{4c7c4c}
\colorlet{eyegreen_blocktitle_bg}{eyegreen_title_bg}
\colorlet{eyegreen_blockbody_bg}{eyegreen_title_bg!120}
\definecolor{eyegreen_example}{HTML}{1414B0}

% black
\definecolor{eyeblack_bg}{HTML}{575451}
\definecolor{eyeblack_title_bg}{HTML}{171514}
\definecolor{eyeblack_highlight}{HTML}{d13f3f}
\definecolor{eyeblack_blockbody_bg}{HTML}{42403c}
\definecolor{eyeblack_example}{HTML}{1414B0}
\colorlet{eyeblack_blocktitle_bg}{eyeblack_title_bg}

% yellow
\definecolor{eyeyellow_bg}{HTML}{eae7dc}
\definecolor{eyeyellow_title_bg}{HTML}{d8c3a5}
\definecolor{eyeyellow_highlight}{HTML}{e85a4f}
\colorlet{eyeyellow_blocktitle_bg}{eyeyellow_title_bg}
\colorlet{eyeyellow_blockbody_bg}{eyeyellow_title_bg!60}

% cyan
\definecolor{eyecyan_title_bg}{HTML}{9dd7d8}
\colorlet{eyecyan_bg}{eyecyan_title_bg!60}
\colorlet{eyecyan_highlight}{eyeyellow_highlight}
\colorlet{eyecyan_blocktitle_bg}{eyecyan_title_bg}
\colorlet{eyecyan_blockbody_bg}{eyecyan_title_bg!80}

% === Color-Scheme ===

\@ifclassloaded{beamer}{

	\iftoggle{blue}{
		\setbeamercolor*{normal text}{fg=white, bg=black}
		\setbeamercolor*{frametitle}{bg=eyeblue_title_bg, fg=white}
		\setbeamercolor*{background canvas}{bg=eyeblue_bg}
		\setbeamercolor*{block title}{bg=eyeblue_blocktitle_bg}
		\setbeamercolor*{block body}{bg=eyeblue_blockbody_bg}
		\setbeamercolor*{alerted text}{fg=eyeblue_highlight}
	}{}

	\iftoggle{red}{
		\setbeamercolor*{normal text}{fg=white, bg=black}
		\setbeamercolor*{normal text}{fg=white, bg=black}
		\setbeamercolor*{frametitle}{bg=eyered_title_bg, fg=white}
		\setbeamercolor*{background canvas}{bg=eyered_bg}
		\setbeamercolor*{block title}{bg=eyered_blocktitle_bg}
		\setbeamercolor*{block body}{bg=eyered_blockbody_bg}
		\setbeamercolor*{alerted text}{fg=eyered_highlight}
	}{}

	\iftoggle{green}{
		\setbeamercolor*{normal text}{fg=white, bg=black}
		\setbeamercolor*{frametitle}{bg=eyegreen_title_bg, fg=white}
		\setbeamercolor*{background canvas}{bg=eyegreen_bg}
		\setbeamercolor*{block title}{bg=eyegreen_blocktitle_bg}
		\setbeamercolor*{block body}{bg=eyegreen_blockbody_bg}
		\setbeamercolor*{example text}{fg=eyegreen_example}
	}{}

	\iftoggle{black}{
		\setbeamercolor*{normal text}{fg=white, bg=black}
		\setbeamercolor*{frametitle}{bg=eyeblack_title_bg, fg=white}
		\setbeamercolor*{background canvas}{bg=eyeblack_bg}
		\setbeamercolor*{block title}{bg=eyeblack_blocktitle_bg}
		\setbeamercolor*{block body}{bg=eyeblack_blockbody_bg}
		\setbeamercolor*{alerted text}{fg=eyeblack_highlight}
	}{}

	\iftoggle{yellow}{
		\setbeamercolor*{normal text}{fg=black, bg=white}
		\setbeamercolor*{frametitle}{bg=eyeyellow_title_bg, fg=black}
		\setbeamercolor*{background canvas}{bg=eyeyellow_bg}
		\setbeamercolor*{block title}{bg=eyeyellow_blocktitle_bg}
		\setbeamercolor*{block body}{bg=eyeyellow_blockbody_bg}
		\setbeamercolor*{alerted text}{fg=eyeyellow_highlight}
	}{}

	\iftoggle{cyan}{
		\setbeamercolor*{normal text}{fg=black, bg=white}
		\setbeamercolor*{frametitle}{bg=eyecyan_title_bg, fg=black}
		\setbeamercolor*{background canvas}{bg=eyecyan_bg}
		\setbeamercolor*{block title}{bg=eyecyan_blocktitle_bg}
		\setbeamercolor*{block body}{bg=eyecyan_blockbody_bg}
		\setbeamercolor*{alerted text}{fg=eyecyan_highlight}
	}{}

}{}

\newcommand{\coloralert}{\usebeamercolor[fg]{alerted text}}
\newcommand{\colorexample}{\usebeamercolor[fg]{example text}}

\endinput
