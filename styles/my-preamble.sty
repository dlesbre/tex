% expands text into margins
% usage:
% 	\Wider{text to expand}
% 	\Wider[size]{text to expand}
\newcommand\Wider[2][3em]{
	\makebox[\linewidth][c]{
		\begin{minipage}{\dimexpr\textwidth+#1\relax}
			\raggedright#2
		\end{minipage}
	}
}

