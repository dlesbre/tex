%%
%% Custom beamer metropolis setup package
%% Content:
%%  - Adds a section pages to metropolis presentations
%%
%% Requires: my-preamble.sty, metropolis
%%
%% Author: Dorian Lesbre
%%
\NeedsTeXFormat{LaTeX2e}[2005/12/01]
\ProvidesPackage{my-metropolis} [2021/03/28 v1.0.0 some config option]

\RequirePackage{my-preamble}

\ProcessOptions\relax

\newcommand{\sectionpages}{
	\begin{frame}
		\vfill
		\centering
		\begin{beamercolorbox}[sep=8pt,center,shadow=true,rounded=true]{title}
			\usebeamerfont{title}\insertsectionhead\par%
		\end{beamercolorbox}
		\vfill
	\end{frame}
}

\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[ball unnumbered]

\makeatletter
	\setlength{\metropolis@progressinheadfoot@linewidth}{1px}
	\setlength{\metropolis@progressonsectionpage@linewidth}{1px}
\makeatother

\endinput

